@model Category

<form method="post">
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2>Create Category</h2>
           <hr />
       </div>
       <div class="mb-3">
           <label asp-for="Name">Name</label>
           <input asp-for="Name" class="form-control" />
           <span asp-validation-for="Name" class="text-danger"></span>
       </div>
        <div class="mb-3">
           <label asp-for="WeightLimit">WeightLimit</label>
           <input asp-for="WeightLimit" class="form-control" />
           <span asp-validation-for="WeightLimit" class="text-danger"></span>
       </div>
       <button type="submit" class="btn btn-secondary" style="width:150px">CREATE</button>
       <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
           Back
       </a>
   </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
}
}